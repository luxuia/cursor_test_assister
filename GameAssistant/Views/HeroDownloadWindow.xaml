<Window x:Class="GameAssistant.Views.HeroDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="英雄和物品图标下载工具" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="游戏:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="GameComboBox" Width="150" SelectedIndex="0">
                        <ComboBoxItem Content="DOTA 2"/>
                        <ComboBoxItem Content="League of Legends"/>
                    </ComboBox>
                    <TextBlock Text="类型:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <ComboBox x:Name="TypeComboBox" Width="120" SelectedIndex="0">
                        <ComboBoxItem Content="英雄"/>
                        <ComboBoxItem Content="物品"/>
                    </ComboBox>
                    <Button x:Name="LoadButton" Content="加载列表" Width="120" Height="30" 
                            Margin="10,0" Click="LoadButton_Click"/>
                    <Button x:Name="DownloadButton" Content="开始下载" Width="120" Height="30" 
                            Margin="10,0" Click="DownloadButton_Click" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：英雄列表 -->
            <Border Grid.Column="0" BorderBrush="#FF3F3F46" BorderThickness="0,0,1,0" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
                        <TextBlock x:Name="ListTitleText" Text="列表" FontWeight="Bold"/>
                        <TextBlock x:Name="CountText" Text=" (0)" Margin="5,0"/>
                    </StackPanel>
                    
                    <ListBox x:Name="ItemsListBox" Grid.Row="1" SelectionMode="Multiple">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="12"/>
                                    <TextBlock Text=" (" Foreground="#FFAAAAAA"/>
                                    <TextBlock Text="{Binding NameCn}" Foreground="#FFAAAAAA"/>
                                    <TextBlock Text=")" Foreground="#FFAAAAAA"/>
                                    <TextBlock Text=" - " Foreground="#FFAAAAAA" Margin="5,0"/>
                                    <TextBlock Text="{Binding Cost}" Foreground="#FFAAAAAA"/>
                                    <TextBlock Text=" 金币" Foreground="#FFAAAAAA"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- 右侧：下载进度和日志 -->
            <ScrollViewer Grid.Column="1">
                <StackPanel>
                    <GroupBox Header="下载进度" Margin="5">
                        <StackPanel Margin="10">
                            <ProgressBar x:Name="DownloadProgressBar" Height="20" Margin="0,5"/>
                            <TextBlock x:Name="ProgressText" Text="等待开始..." Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="下载日志" Margin="5">
                        <ScrollViewer Height="300">
                            <TextBlock x:Name="LogText" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10"/>
                        </ScrollViewer>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="5">
            <TextBlock x:Name="StatusText" Text="就绪" Foreground="White" FontSize="10"/>
        </Border>
    </Grid>
</Window>
